@import "nib"

@import "_normalize"


*, *:before
  box-sizing border-box

html 
  font-size 62.5%

body
  font-size 1.6rem
  font-family: "aktiv-grotesk-std"


a
  background-color transparent


.head-title
  color blue



.footer
  position absolute
  bottom 0
  left 0
  right 0
  text-align center

  a
    color black
    font-size 1.2rem
    text-transform uppercase
    font-weight 400



.header 
  text-align left
  // border-bottom 1px solid rgba(black, 0.1)
  overflow hidden
  height auto
  z-index 10
  // background-color rgba(white, 0.8)
  // background linear-gradient(top, white, transparent)
  position relative
  left 0 
  right 0
  top 0
  transition all 0.2s ease-in-out
  // background: linear-gradient(top, white, transparent);
  padding-top 15rem
  padding-bottom 3rem
  margin 0 auto
  max-width 100rem
  padding-left 3rem





.header-title
  transition all 0.2s ease-in-out
  display block
  font-size 5.2rem
  letter-spacing -2px
  display inline-block
  color white
  vertical-align top
  font-weight 600
  padding 0 1rem 
  margin 0 auto
  color #111
  line-height 1.4
  text-transform uppercase





.header-subtitle
  display block
  transition all 0.2s ease-in-out

  max-width 50rem
  font-size 1.9rem
  font-weight 300
  // margin 0 auto
  color rgba(black, 0.6)
  padding 1rem 1rem

.header-form
  transition all 0.2s ease-in-out
  
  display block
  // float left
  // width 80%
  
  appearance: none
  border none
  vertical-align top
  background-color transparent
  // margin 1rem
  margin 2rem 1rem

  input
    -webkit-appearance none
    display inline-block
    width 40%
    min-width 28rem
    height 4rem
    border-radius 0.4rem
    outline none
    vertical-align top

    padding 0 1rem
    font-size 2rem
    font-weight 400
    border none
    background-color rgba(white, 0.2)
    box-shadow inset 0 0 0 1px rgba(black, 0.1)


  button
    width 16rem
    display inline-block
    height 4rem
    vertical-align top
    // margin 0 auto
    // margin 2rem auto
    outline none
    border-radius 0.4rem
    border 1px solid rgba(black, 0.1)
    // box-shadow inset 0 0 0 2px rgba(black, 0.1)
    padding 0
    background-color rgba(white, 0.3)
    // background-color rgba(saturation(red, 77), 0.9)
    color black
    font-weight 500
    margin-left 1rem
    // margin 1rem auto
    -webkit-font-rendering optimize-legibility


.bg-images
  position absolute
  top 10%
  left 0
  right 0


.bg-item
  display inline-block
  width 25%
  padding-bottom 30%
  margin-left -4px
  position relative

.result-image
  position absolute
  pointer-events none
  display block
  width 200%
  z-index 0
  top -50%
  height 200%
  left -60%
  background-color white
  background-size cover
  background-position center
  -webkit-filter blur(70px) saturate(2)
  transform translate3d(0,0,0)




.search-filters
  padding 0
  margin 0
  margin-left 1rem

  &:before
    content : "search on: "
    text-transform uppercase
    font-size 1.2rem
    font-weight 500
    opacity 0.9
    margin-right 2rem

.filter
  margin-right 1rem
  margin-left 0
  padding 0
  display inline-block
  position relative
  border-radius 0.4rem
  background-color rgba(white, 0.2)
  padding 0.1rem 0.7rem 0.3rem

  opacity 0.3

  input
    opacity 0
    position absolute


  span
    text-transform uppercase
    font-size 1.2rem
    font-weight 500

  &.checked
    opacity 1


  


.result-container
  position relative
  max-width 70rem
  display block
  height 100%
  text-align center
  margin 0 auto

  padding 1rem

.search-result
  list-style none
  display block
  vertical-align top
  position relative
  width 100%
  max-width 70rem
  padding 0
  text-decoration none
  margin 0 auto
  border-radius 0.1rem

  &:before
    content ""
    position absolute
    bottom 0
    width 100%
    height 100%
    left 0
    top 0
    z-index 2
    background-color rgba(white, 0.35)

    box-shadow 0 0.1rem 0.4rem rgba(black, 0.25)

      


  img
    width 100%
    height auto
    z-index 2
    position relative


  h3
    font-size 2rem
    font-weight 300
    color rgba(black, 0.95)
    vertical-align bottom
    position: relative;
    text-align right
    // top: 50%;
    transform: translateY(-0%);
    display inline-block
    width 100%
    z-index 3
    position relative
    line-height 1.4
    margin 0
    padding-bottom 2.2rem
    margin-top 0.5rem



  .source
    color rgba(black, 0.7)
    font-size 1.1rem
    font-weight bold
    line-height 1
    vertical-align bottom
    position relative
    text-transform uppercase
    z-index 10
    display block
    position absolute
    bottom 1rem
    // padding 1rem
    left 0
    right 1rem
    text-align right
    // left 2rem


.source-play
  display block
  font-weight bold
  text-decoration none
  text-transform uppercase
  font-size 1.2rem
  display inline-block
  padding 0.5rem 1rem




footer
  position relative
  bottom 0
  left 0
  right 0
  text-align left
  margin-left 1rem
  margin-top 10rem

  .footer-wrap
    max-width 100rem
    margin 0 auto
    padding-left 4rem
    
  p, a
    font-weight 300
    

  a
    color black
    background-color rgba(white, 0.2)
    border-radius 0.4rem
    padding 0.1rem 0.4rem 0.3rem
    display inline-block



@media (min-width: 820px)

  .search-results
    display: flex; /* or inline-flex */
    flex-flow: row wrap;
    margin 0 auto
    flex-wrap: wrap;
    // margin-left 10%

    align-content: stretch;
    -webkit-box-align: stretch;
    -webkit-align-items: stretch;
    align-items: stretch;
    margin-top 0.5rem

    max-width 102rem
    

  .search-result
    width calc(25% - 2rem)
    // box-shadow inset 0 0 0 1px rgba(black, 0.15)

    display inline-block
    margin 1rem
